{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client"],
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@app/media-domain": ["../../packages/media-domain/src/index.ts"],
			"~/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"drizzle.config.ts",
		"vitest.config.ts"
	],
	"exclude": ["node_modules", "workers/**"]
}
