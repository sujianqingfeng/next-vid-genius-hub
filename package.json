{
  "name": "next-vid-genius-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:host": "next dev --turbopack --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:d1:migrate:remote": "wrangler --config wrangler.json d1 migrations apply vidgen_app --remote",
    "db:d1:list:remote": "wrangler --config wrangler.json d1 migrations list vidgen_app --remote",
    "test": "vitest run",
    "remotion:ensure": "pnpm exec remotion browser ensure --log=info",
    "cf:dev": "wrangler dev --config wrangler.toml --env local --port 8787",
    "cf:dev:lite": "wrangler dev --config wrangler.toml --env local-lite --local --port 8787",
    "cf:deploy": "wrangler deploy --config wrangler.toml --env production",
    "dev:stack": "docker compose -f docker-compose.dev.yml up -d",
    "dev:stack:down": "docker compose -f docker-compose.dev.yml down -v",
    "dev:stack:rebuild-burner": "docker compose -f docker-compose.dev.yml build burner-ffmpeg",
    "dev:stack:restart-burner": "pnpm dev:stack:rebuild-burner && docker compose -f docker-compose.dev.yml up -d burner-ffmpeg",
    "dev:stack:rebuild-remotion": "docker compose -f docker-compose.dev.yml build renderer-remotion",
    "dev:stack:restart-remotion": "pnpm dev:stack:rebuild-remotion && docker compose -f docker-compose.dev.yml up -d renderer-remotion",
    "dev:stack:rebuild-downloader": "docker compose -f docker-compose.dev.yml build media-downloader",
    "dev:stack:restart-downloader": "pnpm dev:stack:rebuild-downloader && docker compose -f docker-compose.dev.yml up -d media-downloader",
    "dev:stack:rebuild-audio-transcoder": "docker compose -f docker-compose.dev.yml build audio-transcoder",
    "dev:stack:restart-audio-transcoder": "pnpm dev:stack:rebuild-audio-transcoder && docker compose -f docker-compose.dev.yml up -d audio-transcoder",
    "dev:stack:restart-all": "docker compose -f docker-compose.dev.yml build burner-ffmpeg renderer-remotion media-downloader audio-transcoder && docker compose -f docker-compose.dev.yml up -d burner-ffmpeg renderer-remotion media-downloader audio-transcoder",
    "build:packages": "pnpm -r --filter '@app/*' run build",
    "typecheck:packages": "pnpm -r --filter '@app/*' run typecheck"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.42",
    "@ai-sdk/openai-compatible": "^1.0.19",
    "@app/job-callbacks": "workspace:*",
    "@app/media-comments": "workspace:*",
    "@app/media-core": "workspace:*",
    "@app/media-node": "workspace:*",
    "@app/media-providers": "workspace:*",
    "@app/media-subtitles": "workspace:*",
    "@orpc/client": "^1.9.3",
    "@orpc/openapi": "^1.9.3",
    "@orpc/server": "^1.9.3",
    "@orpc/tanstack-query": "^1.9.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@remotion/bundler": "^4.0.355",
    "@remotion/cli": "^4.0.355",
    "@remotion/player": "^4.0.355",
    "@remotion/renderer": "^4.0.355",
    "@tanstack/react-query": "^5.90.2",
    "ai": "^5.0.60",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "execa": "^9.5.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "remotion": "^4.0.355",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "undici": "^7.16.0",
    "bcryptjs": "^2.4.3",
    "youtubei.js": "*",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^1.12.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4.1.14",
    "tsdown": "^0.15.8",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.47.0"
  },
  "dependenciesOverrides": {},
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": []
    }
  }
}
