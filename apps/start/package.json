{
  "name": "vid-genius-start",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run build:root && pnpm exec wrangler dev --persist-to ../../.wrangler/state --config wrangler.root.jsonc --env local --port ${PORT:-3100}",
    "dev:gray": "pnpm run build && pnpm exec wrangler dev --persist-to ../../.wrangler/state --config wrangler.jsonc --env local --port ${PORT:-3100}",
    "dev:vite": "TSS_DEV_SERVER=true vite dev -c vite.root.config.ts --port ${PORT:-3100}",
    "dev:vite:gray": "TSS_DEV_SERVER=true vite dev --port ${PORT:-3100}",
    "dev:legacy": "TSS_DEV_SERVER=true VITE_PROXY_NEXT=1 vite dev --port ${PORT:-3100}",
    "build": "vite build && pnpm run postbuild:gray-assets",
    "build:root": "vite build -c vite.root.config.ts",
    "postbuild:gray-assets": "tsx ./scripts/postbuild-gray-assets.ts",
    "preview": "vite preview --port ${PORT:-3100}",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "deploy": "pnpm run build && pnpm exec wrangler deploy",
    "deploy:root": "pnpm run build:root && pnpm exec wrangler deploy --config wrangler.root.jsonc"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.13.8",
    "@orpc/client": "1.12.2",
    "@orpc/contract": "1.12.2",
    "@orpc/json-schema": "1.12.2",
    "@orpc/openapi": "1.12.2",
    "@orpc/server": "1.12.2",
    "@orpc/tanstack-query": "1.12.2",
    "@orpc/zod": "1.12.2",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.17",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "dotenv": "^16.0.0",
    "jsdom": "^27.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.55.0"
  }
}
