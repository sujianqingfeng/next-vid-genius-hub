{
	"name": "next-vid-genius-hub",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm dev:web",
		"build": "pnpm build:web",
		"preview": "pnpm preview:web",
		"deploy": "pnpm deploy:web",
		"test": "pnpm test:web",
		"lint": "pnpm lint:web",
		"format": "pnpm format:web",
		"dev:web": "pnpm -C apps/web dev",
		"dev:web:vite": "pnpm -C apps/web dev:vite",
		"build:web": "pnpm -C apps/web build",
		"preview:web": "pnpm -C apps/web preview",
		"deploy:web": "pnpm -C apps/web run deploy",
		"test:web": "pnpm -C apps/web test",
		"lint:web": "pnpm -C apps/web lint",
		"format:web": "pnpm -C apps/web format",
		"db:generate": "pnpm -C apps/web db:generate",
		"db:studio": "pnpm -C apps/web db:studio",
		"db:d1:migrate:local": "pnpm -C apps/web db:d1:migrate:local",
		"db:d1:list:local": "pnpm -C apps/web db:d1:list:local",
		"db:d1:migrate:remote": "pnpm -C apps/web db:d1:migrate:remote",
		"db:d1:list:remote": "pnpm -C apps/web db:d1:list:remote",
		"remotion:ensure": "pnpm -C apps/web remotion:ensure",
		"cf:dev": "wrangler --cwd workers/media-orchestrator dev --config wrangler.toml --env local-lite --port 8787",
		"cf:deploy": "wrangler --cwd workers/media-orchestrator deploy --config wrangler.toml --env production",
		"dev:stack": "docker compose -f docker-compose.dev.yml up -d",
		"dev:stack:down": "docker compose -f docker-compose.dev.yml down -v",
		"dev:stack:rebuild-burner": "docker compose -f docker-compose.dev.yml build burner-ffmpeg",
		"dev:stack:restart-burner": "pnpm dev:stack:rebuild-burner && docker compose -f docker-compose.dev.yml up -d burner-ffmpeg",
		"dev:stack:rebuild-remotion": "docker compose -f docker-compose.dev.yml build renderer-remotion",
		"dev:stack:restart-remotion": "pnpm dev:stack:rebuild-remotion && docker compose -f docker-compose.dev.yml up -d renderer-remotion",
		"dev:stack:rebuild-downloader": "docker compose -f docker-compose.dev.yml build media-downloader",
		"dev:stack:restart-downloader": "pnpm dev:stack:rebuild-downloader && docker compose -f docker-compose.dev.yml up -d media-downloader",
		"dev:stack:restart-all": "docker compose -f docker-compose.dev.yml build burner-ffmpeg renderer-remotion media-downloader && docker compose -f docker-compose.dev.yml up -d burner-ffmpeg renderer-remotion media-downloader",
		"build:packages": "pnpm -r --filter './packages/*' run build",
		"typecheck:packages": "pnpm -r --filter './packages/*' run typecheck"
	},
	"devDependencies": {
		"tsdown": "^0.17.2",
		"typescript": "^5.9.3",
		"wrangler": "^4.55.0"
	},
	"dependenciesOverrides": {},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": []
		}
	}
}
