# Database
DATABASE_URL="file:./local.db"

# Proxy
PROXY_URL=""

# Whisper Local Configuration
WHISPER_CPP_PATH=""

# Cloudflare Workers AI Configuration
# Get these from your Cloudflare dashboard: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_ACCOUNT_ID="your-account-id-here"
CLOUDFLARE_API_TOKEN="your-api-token-here"

# Cloud rendering orchestrator (Cloudflare Worker) base URL
CF_ORCHESTRATOR_URL="http://localhost:8787" # e.g. wrangler dev URL or deployed worker URL

# Shared HMAC secret for callbacks and orchestrator calls (set the same in Worker)
JOB_CALLBACK_HMAC_SECRET="replace-with-strong-secret"

# Optional: public base URL for R2 objects (if artifacts are served directly)
R2_PUBLIC_BASE_URL=""

# Cloudflare R2 (S3-compatible) credentials for local wrangler dev
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""

# Feature flags
# If set to 'false', cloud downloads will not hydrate large artifacts to local disk.
# Only remote R2 keys will be stored (video/audio/metadata), and playback should use presigned URLs or a proxy.
ENABLE_LOCAL_HYDRATE=true
