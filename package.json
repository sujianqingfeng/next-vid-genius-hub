{
	"name": "next-vid-genius-hub",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "pnpm -C apps/start dev",
		"dev:gray": "pnpm -C apps/start dev:gray",
		"dev:legacy": "pnpm -C apps/start dev:legacy",
		"dev:vite": "pnpm -C apps/start dev:vite",
		"dev:vite:gray": "pnpm -C apps/start dev:vite:gray",
		"dev:next": "next dev --turbopack --hostname 0.0.0.0",
		"dev:next:host": "next dev --turbopack --hostname 0.0.0.0",
		"build": "next build --webpack",
		"start": "next start",
		"build:start": "pnpm -C apps/start build",
		"build:start:root": "pnpm -C apps/start build:root",
		"deploy:start": "pnpm -C apps/start deploy",
		"deploy:start:root": "pnpm -C apps/start deploy:root",
		"lint": "eslint .",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:d1:migrate:local": "wrangler --config wrangler.json d1 migrations apply vidgen_app --local",
		"db:d1:list:local": "wrangler --config wrangler.json d1 migrations list vidgen_app --local",
		"db:d1:migrate:remote": "wrangler --config wrangler.json d1 migrations apply vidgen_app --remote",
		"db:d1:list:remote": "wrangler --config wrangler.json d1 migrations list vidgen_app --remote",
		"test": "vitest run",
		"remotion:ensure": "pnpm exec remotion browser ensure --log=info",
		"cf:dev": "wrangler dev --config wrangler.toml --env local-lite --port 8787",
		"cf:deploy": "wrangler deploy --config wrangler.toml --env production",
		"dev:stack": "docker compose -f docker-compose.dev.yml up -d",
		"dev:stack:down": "docker compose -f docker-compose.dev.yml down -v",
		"dev:stack:rebuild-burner": "docker compose -f docker-compose.dev.yml build burner-ffmpeg",
		"dev:stack:restart-burner": "pnpm dev:stack:rebuild-burner && docker compose -f docker-compose.dev.yml up -d burner-ffmpeg",
		"dev:stack:rebuild-remotion": "docker compose -f docker-compose.dev.yml build renderer-remotion",
		"dev:stack:restart-remotion": "pnpm dev:stack:rebuild-remotion && docker compose -f docker-compose.dev.yml up -d renderer-remotion",
		"dev:stack:rebuild-downloader": "docker compose -f docker-compose.dev.yml build media-downloader",
		"dev:stack:restart-downloader": "pnpm dev:stack:rebuild-downloader && docker compose -f docker-compose.dev.yml up -d media-downloader",
		"dev:stack:restart-all": "docker compose -f docker-compose.dev.yml build burner-ffmpeg renderer-remotion media-downloader && docker compose -f docker-compose.dev.yml up -d burner-ffmpeg renderer-remotion media-downloader",
		"build:packages": "pnpm -r --filter '@app/*' run build",
		"typecheck:packages": "pnpm -r --filter '@app/*' run typecheck"
	},
	"dependencies": {
		"@ai-sdk/deepseek": "^1.0.10",
		"@ai-sdk/openai": "^2.0.80",
		"@app/job-callbacks": "workspace:*",
		"@app/media-comments": "workspace:*",
		"@app/media-core": "workspace:*",
		"@app/media-domain": "workspace:*",
		"@app/media-node": "workspace:*",
		"@app/media-providers": "workspace:*",
		"@app/media-subtitles": "workspace:*",
		"@orpc/client": "^1.12.2",
		"@orpc/openapi": "^1.12.2",
		"@orpc/server": "^1.12.2",
		"@orpc/tanstack-query": "^1.12.2",
		"@paralleldrive/cuid2": "^3.0.4",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-progress": "^1.1.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@remotion/bundler": "^4.0.382",
		"@remotion/cli": "^4.0.382",
		"@remotion/player": "^4.0.382",
		"@remotion/renderer": "^4.0.382",
		"@tanstack/react-query": "^5.90.12",
		"ai": "^5.0.108",
		"bcryptjs": "^3.0.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.45.0",
		"lucide-react": "^0.556.0",
		"next": "16.0.8",
		"next-themes": "^0.4.6",
		"react": "19.2.1",
		"react-dom": "19.2.1",
		"remotion": "^4.0.382",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"undici": "^7.16.0",
		"youtubei.js": "^16.0.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@eslint/eslintrc": "^3.3.3",
		"@opennextjs/cloudflare": "^1.14.4",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^24.10.2",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.1",
		"eslint-config-next": "16.0.8",
		"tailwindcss": "^4.1.17",
		"tsdown": "^0.17.2",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.15",
		"wrangler": "^4.55.0"
	},
	"dependenciesOverrides": {},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": []
		}
	}
}
